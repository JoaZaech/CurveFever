<Page x:Class="CurveFever.Views.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CurveFever.Views"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">
    <Grid>
        <Label Content="Player 1" HorizontalAlignment="Left" Margin="268,199,0,0" VerticalAlignment="Top"/>
        <Label Content="Player 2" HorizontalAlignment="Left" Margin="422,199,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="388,292,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="200,283,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

        <!-- Color Picker for Player 1 -->
        <xctk:ColorPicker HorizontalAlignment="Left" Margin="268,250,0,0" VerticalAlignment="Top" Width="120" SelectedColorChanged="Player1ColorChanged"/>

        <!-- Color Picker for Player 2 -->
        <xctk:ColorPicker HorizontalAlignment="Left" Margin="422,250,0,0" VerticalAlignment="Top" Width="120" SelectedColorChanged="Player2ColorChanged"/>
    </Grid>
</Page>
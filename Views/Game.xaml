<Page x:Class="CurveFever.Views.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:CurveFever.Views"
      KeyboardNavigation.TabNavigation="None"
      KeyboardNavigation.ControlTabNavigation="None"
      KeyboardNavigation.DirectionalNavigation="None"
      xmlns:viewmodels="clr-namespace:CurveFever.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game" PreviewKeyDown="Key_Down" PreviewKeyUp="Key_Up" Focusable="True" FocusVisualStyle="{x:Null}" KeyDown="Key_Down" KeyUp="Key_Up">
    <Grid Focusable="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="559*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <StackPanel Focusable="False" Width="100" HorizontalAlignment="Left" Grid.RowSpan="2">
            <StackPanel Background="White">
                <Label x:Name="MyLabel" Content="Leaderboard" HorizontalAlignment="Center"/>
                <Label x:Name="MyLa2bel" Content="{Binding PlayerScore1}" HorizontalAlignment="Center"/>
                <Label x:Name="MyLa22bel" Content="{Binding PlayerScore2}" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        <Canvas Focusable="False" x:Name="GameCanvas" Background="AliceBlue" Margin="100,0,0,0" Height="450" Width="700" Grid.RowSpan="2" Grid.ColumnSpan="2"></Canvas>
    </Grid>
</Page>